<!-- Modal -->
<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Add brew</h4>
      </div>
      <%= form_for :brew do |f| %>
      <div class="modal-body">
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :recipe_url %>
            <%= f.text_field :recipe_url, class: "form-control" %>
          </div>
          <div class="gravities">
            <%= f.label :og %>
            <%= f.number_field :og, class: "form-control", min: 0.0, max: 2.0, step: 0.001, value: "1.000" %> 
            <%= f.label :fg %>
            <%= f.number_field :fg, class: "form-control", min: 0.0, max: 2.0, step: 0.001, value: "1.000" %>          
          </div>
          <div class="field"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.button :submit, :class => 'btn btn-primary' %>
      </div>
      <% end %>      
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->